{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", { "preset": "conventionalcommits" }],
    [
      "@semantic-release/release-notes-generator",
      { "preset": "conventionalcommits" }
    ],
    [
      "@semantic-release/exec",
      { "prepareCmd": "pnpm /version/ ${nextRelease.version}" }
    ],
    ["@semantic-release/exec", { "prepareCmd": "pnpm generate" }],
    [
      "@semantic-release/git",
      {
        "message": "release: v${nextRelease.version}",
        "assets": ["public/profiles/**/*.json", "package.json"]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "pnpm build",
        "publishCmd": "pnpm publish"
      }
    ],
    ["@semantic-release/github"]
  ]
}
